extends /layout/layout

block content
  h1(class="h3 mb-3 font-weight-normal") Cadastro instituição 
  form(class="form-signin" method='POST' action='/instituicao')
    input(
      type='text'
      name='nome'
      placeholder='Digite nome da instituição'
      class="form-control"
      autofocus
    )
    p
      input(
        type='text'
        name='id_local'
        placeholder='id_local'
        class="form-control"
      )
    p
      input(
        type='submit'
        name='logar'
        value='Login'
        class="btn btn-lg btn-primary btn-block"
      )