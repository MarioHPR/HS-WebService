extends ../layout/layout

block content
  div
    h1 Cadastrar Exame
  div
    div(id='formInstituicao' class="form-row")
      block teste
        div(  class="modal fade" id="adicaoInstituicao"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
          div(class="modal-dialog modal-lg")
            div(class="modal-content")
              include ../instituicao
      form( name='testeLoko' class="form-signin" method='POST' action='/exame' enctype='multipart/form-data')
        label(for="seletor" class="my-1 mr-2") Selecione a instituição que foi realizado o exame
        select(name="seletor" id="seletor" class="custom-select my-1 mr-sm-2")
          option(selected) Selecione a instituição
          each item in inst
            option(value=item.id)= item.nome
        p
          input(type='button' data-toggle="modal" data-target="#adicaoInstituicao" value='Adicionar outro local' id='btAddInst')

        h1 Dados do exame
        p
          input(class="form-control" type='text' name='nome' placeholder='Nome do exame')
        div(id='myTable' class="text-center")
          input(type='text' name='A0' placeholder='1 Atributo')
          label = 
          input(type='text' name='V0' placeholder='1 Valor')
          input(type='button' onclick='adicionarCampos()' value=' + ' )
        div(class="form-group")
          label(for="arq") Anexar arquivo
          input(id="arq" name="file" type="file" class="form-control-file")
        br

        input(
          type='submit'
          name='cadastrar'
          value='cadastrar'
          class="btn btn-lg btn-primary btn-block"
        )