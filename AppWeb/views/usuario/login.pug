extends ../layout/layoutoff

block content
  img(class="mb-4" src="../../public/images/logo.png" alt="" width="72" height="72")
  h1(class="h3 mb-3 font-weight-normal") Login App 
  form(class="form-signin" method='POST' action='/')
    input(
      type='text'
      name='login'
      placeholder='Digite Login'
      class="form-control"
      autofocus
    )
    p
      input(
        type='password'
        name='senha'
        placeholder='Digite sua senha'
        class="form-control"
      )
    p
      input(
        type='submit'
        name='logar'
        value='Login'
        class="btn btn-lg btn-primary btn-block"
      )
      a(class="btn-lg btn-warning btn-block" href='/usuario/') Criar Login